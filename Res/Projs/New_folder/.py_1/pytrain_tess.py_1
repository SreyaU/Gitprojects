 def encryption(data, key):
    en_msg = ""
    for ch in data:
        en_msg += chr(ord(ch)+key)
 
    en_file = open("encrypted_file", "w")
    en_file.write(en_msg)
    print("Encrypted successfully")
    return en_msg
def decryption(data, key):
    de_msg = ""
    for ch in data:
        de_msg += chr(ord(ch)-key)
    de_file = open("decrypted_file", "w")
    de_file.write(de_msg)
    print("Decrypted successfully")
    return de_msg
 
