file = open("file.txt", "r")
data = file.read()
 
while(True):
    user = input("Type 'encrypt' for encryption and 'decrypt' for decryption: ").lower()
    try:
        key = int(input("Enter the key value: "))
    except ValueError:
        print("Please enter digits")
        continue
    if user == 'encrypt':
        en_msg = encryption(data, key)
    elif user == 'decrypt':
        de_msg = decryption(en_msg, key)
    else:
        print("Please enter proper input")
        continue
    choice = input("Do you want to go again (y/n)? ").lower()
    if choice == 'y':
        continue
    else:
        break
